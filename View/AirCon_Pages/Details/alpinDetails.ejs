    // Function to update the product details based on the selected model
    function updateProductDetails() {
      const selectedModel = document.getElementById('acModelSelect').value;
      const ac = acData[selectedModel];

      // Update image and add alt text
      const productImage = document.querySelector("#acDetails .row img");
      productImage.src = ac.image;
      productImage.alt = "Климатик " + document.getElementById('acModelSelect').options[document.getElementById('acModelSelect').selectedIndex].text;


      // Update description
      document.querySelector("#acDetails .row p").textContent = ac.description;

      // Update characteristics list
      const characteristicsList = document.querySelector("#acDetails .row ul");
      characteristicsList.innerHTML = ''; // Clear existing items
      ac.characteristics.forEach(item => {
        const li = document.createElement('li');
        li.textContent = item;
        characteristicsList.appendChild(li);
      });

      // Update price
      document.querySelector("#acDetails .row .mt-4 span").textContent = ac.price;

      // Update technical table
      if (ac.technicalSpecs) {
        const techTable = document.getElementById('technicalTable');
        if (techTable) {
          const cells = techTable.querySelectorAll("tbody td"); // Get all <td> elements in tbody
          // Ensure you have the correct number of cells and they correspond to the data
          if (cells.length >= 6) {
            cells[0].textContent = ac.technicalSpecs.coolingPower;
            cells[1].textContent = ac.technicalSpecs.heatingPower;
            cells[2].textContent = ac.technicalSpecs.noiseLevelIndoor;
            cells[3].textContent = ac.technicalSpecs.operatingTemp;
            cells[4].textContent = ac.technicalSpecs.dimensionsIndoor;
            cells[5].textContent = ac.technicalSpecs.warranty;
          }
        }
      }
    }

    // Event listener for dropdown change
    document.getElementById('acModelSelect').addEventListener('change', updateProductDetails);

    // Initial call to populate the details
    updateProductDetails();

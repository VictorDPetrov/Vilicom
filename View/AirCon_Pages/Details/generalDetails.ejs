    function updateProductDetails() {
      const selectedModel = document.getElementById('acModelSelect').value;
      const ac = acData[selectedModel];

      if (!ac) {
        // Handle missing data if necessary
        // For example, clear fields or show default message
        document.querySelector("#acDetails .row img").style.display = 'none';
        document.querySelector("#acDetails .row p").textContent = 'Информация за модела не е налична.';
        document.querySelector("#acDetails .row ul").innerHTML = '';
        document.querySelector("#acDetails .row .mt-4 span").textContent = '-';

        // Update technical table with N/A
        const cells = document.querySelectorAll('#technicalTable tbody td');
        cells.forEach(cell => { cell.textContent = 'N/A'; });
        return;
      }

      // Show image
      const img = document.querySelector("#acDetails .row img");
      img.style.display = 'block';
      img.src = ac.image;

      // Description
      document.querySelector("#acDetails .row p").textContent = ac.description;

      // Characteristics
      const ul = document.querySelector("#acDetails .row ul");
      ul.innerHTML = '';
      ac.characteristics.forEach(item => {
        const li = document.createElement('li');
        li.textContent = item;
        ul.appendChild(li);
      });

      // Price
      document.querySelector("#acDetails .row .mt-4 span").textContent = ac.price;

      // Technical specs table update
      const tdCells = document.querySelectorAll('#technicalTable tbody td');
      if (ac.technicalSpecs) {
        tdCells[0].textContent = ac.technicalSpecs.coolingPower || 'N/A';
        tdCells[1].textContent = ac.technicalSpecs.heatingPower || 'N/A';
        tdCells[2].textContent = ac.technicalSpecs.noiseLevelIndoor || 'N/A';
        tdCells[3].textContent = ac.technicalSpecs.operatingTemp || 'N/A';
        tdCells[4].textContent = ac.technicalSpecs.dimensionsIndoor || 'N/A';
        tdCells[5].textContent = ac.technicalSpecs.warranty || 'N/A';
      } else {
        tdCells.forEach(cell => { cell.textContent = 'N/A'; });
      }
    }
    // Event listener for dropdown change
    document.getElementById('acModelSelect').addEventListener('change', updateProductDetails);

    // Initial call to populate the details

    <script>
        function showMore(section, button) {
            const wrappers = document.querySelectorAll(`.${section} .image-text-wrapper`);
            let allVisible = true;

            // Toggle visibility for each item beyond the initial three
            wrappers.forEach((wrapper, index) => {
                if (index >= 3) {
                    wrapper.classList.toggle('visible');
                }
            });

            // Check if any items beyond the initial three are still hidden
            const hiddenItems = Array.from(wrappers).slice(3).some(wrapper => !wrapper.classList.contains('visible'));
            allVisible = !hiddenItems;

            // Update button text based on visibility
            button.textContent = allVisible ? 'Покажи по-малко' : 'Покажи повече';
        }
    </script>

    <script>
        // Show the button when the user scrolls down 100px
        window.onscroll = function () {
            const scrollButton = document.querySelector('.scroll-to-top');
            if (document.body.scrollTop > 100 || document.documentElement.scrollTop > 100) {
                scrollButton.style.display = 'block';
            } else {
                scrollButton.style.display = 'none';
            }
        };

        // Smooth scroll to the top
        function scrollToTop() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        }
    </script>

    <h1 style="text-align: center; color: #2A186B; font-size: 35px; margin-top: 12px;">Услуги</h1>
    <hr>
    <!-- Отоплителни инсталации Section -->
    <section class="service-section">
      <div class="row align-items-center">
        <div class="col-md-4">
          <img src="./Images/Gallery/heating.jpg" alt="Отоплителни инсталации" class="img-fluid">
        </div>
        <div class="col-md-8">
          <h2 style="color: #2A186B;">Отоплителни инсталации</h2>
